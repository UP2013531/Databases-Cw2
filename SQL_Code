CREATE DATABASE hospital_db;

CREATE TABLE WardRecord (
  WardRecordID CHAR(6) UNIQUE,
  SpecialityID CHAR(6) NOT NULL,
  WardName VARCHAR(15) NOT NULL,
  PRIMARY KEY (WardRecordID)
);

CREATE TABLE Ward (
  WardName VARCHAR(15) UNIQUE,
  HeadNurseID CHAR(6) NOT NULL,
  NurseID CHAR(6) NOT NULL,
  WardRecordID CHAR(6) NOT NULL,
  PRIMARY KEY (WardName)
);

CREATE TABLE Patient (
  PatientID CHAR(6) UNIQUE,
  PatientRecordID CHAR(6) NOT NULL,
  DoctorID CHAR(6) NOT NULL,
  PRIMARY KEY (PatientID)
);

CREATE TABLE MedicalHistory (
  MedicalRecordID VARCHAR(10) UNIQUE,
  Complaint VARCHAR(40) NOT NULL,
  TreatmentDescription VARCHAR(40) NOT NULL,
  DateAdmitted DATE NOT NULL,
  DateDischarged DATE NOT NULL,
  DTS DATE NOT NULL,
  DTE DATE NOT NULL,
  PatientRecordID CHAR(6) NOT NULL,
  DoctorID CHAR(6) NOT NULL,
  TreatmentID CHAR(6) NOT NULL,
  PRIMARY KEY (MedicalRecordID)
);

CREATE TABLE PatientTreatment (
  TreatmentID CHAR(10) UNIQUE,
  PatientID CHAR(6) UNIQUE
);





CREATE TABLE NurseStaff (
  NurseID CHAR(6) UNIQUE,
  Fname VARCHAR(20),
  Lname VARCHAR(20),
  WardName CHAR(6),
  PRIMARY KEY (NurseID)
);

CREATE TABLE DoctorStaff (
  DoctorID CHAR(6) UNIQUE,
  Fname VARCHAR(20),
  Lname VARCHAR(20),
  PatientID CHAR(6),
  TreatmentID CHAR(10),
  PRIMARY KEY (DoctorID)
);

CREATE TABLE PatientDoctors (
  PatientID CHAR(6) UNIQUE,
  DoctorID CHAR(6) UNIQUE
);

CREATE TABLE PatientRecord (
  PatientRecordID CHAR(6) UNIQUE,
  Fname VARCHAR(20),
  Sname VARCHAR(20),
  DOB DATE NOT NULL,
  GPFname VARCHAR(20),
  GPLname VARCHAR(20),
  GPAddress VARCHAR(100),
  PatientID CHAR(6),
  MedicalRecordID VARCHAR(10),
  PRIMARY KEY (PatientRecordID)
);

CREATE TABLE WardSpeciality (
  SpecialityID CHAR(6) UNIQUE,
  SpecialityName VARCHAR(50),
  WardName VARCHAR(15),
  PRIMARY KEY (SpecialityID)
);

CREATE TABLE Treatment (
  TreatmentID CHAR(10) UNIQUE,
  TreatmentName VARCHAR(50),
  PRIMARY KEY (TreatmentID)
);
